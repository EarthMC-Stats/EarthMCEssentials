{
  "schemaVersion": 1,
  "id": "emc-essentials",
  "version": "${version}",
  "name": "EarthMCEssentials",
  "description": "A mod providing info on the EarthMC Minecraft server.",
  "authors": [
    "Owen77Stubbs",
    "Warriorrr"
  ],
  "contact": {
    "homepage": "https://github.com/Warriorrrr/EarthMCEssentials",
    "issues": "https://github.com/Warriorrrr/EarthMCEssentials/issues"
  },

  "icon": "assets/emce/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.emc.emce.EarthMCEssentials"
    ],
    "modmenu": [
      "net.emc.emce.config.ModMenuIntegration"
    ]
  },
  "mixins": [
    "emce.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": ">=1.18.2",
    "java": ">=17"
  },
  "custom": {
    "modmenu:clientsideOnly": true
  }
}